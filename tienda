<body><h1>ðŸ›’ Productos</h1><div class="card">
  <input type="text" id="search" placeholder="Buscar producto" />
  <ul id="result"></ul>
</div><div class="card">
  <input type="text" id="name" placeholder="Nombre del producto" />
  <input type="number" id="price" placeholder="Precio" />
  <button onclick="addOrUpdate()">Agregar / Modificar</button>
</div><script>
  let products = {
    "Manzana": 10,
    "Pan": 25,
    "Leche": 30
  };

  const searchInput = document.getElementById("search");
  const result = document.getElementById("result");

  searchInput.addEventListener("input", () => {
    const text = searchInput.value.toLowerCase();
    result.innerHTML = "";
    for (let p in products) {
      if (p.toLowerCase().includes(text)) {
        result.innerHTML += `<li>${p}: $${products[p]}</li>`;
      }
    }
  });

  function addOrUpdate() {
    const name = document.getElementById("name").value;
    const price = document.getElementById("price").value;
    if (name && price) {
      products[name] = price;
      alert("Producto guardado âœ¨");
      document.getElementById("name").value = "";
      document.getElementById("price").value = "";
    }
  }
</script></body>
</html>
